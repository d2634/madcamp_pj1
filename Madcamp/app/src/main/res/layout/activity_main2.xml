<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님 반갑습니다                 "
            android:layout_marginTop="21dp"
            android:id="@+id/subtitle"
            android:textColor="#714F3C"
            android:textSize="13sp"
            />
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frag_container_"
        android:layout_width="match_parent"
        android:layout_height="514dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="579dp"
            android:layout_height="621dp"
            android:layout_marginLeft="-105dp"
            android:src="@drawable/background_image" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        >

        <Button
            android:id="@+id/btn_frag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#FFB100"
            android:gravity="center"
            android:text="연락처"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/kakaootfregular"
            />

        <Button
            android:id="@+id/btn_frag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#E29D00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/kakaootfregular"
            android:text="갤러리"/>
        <Button
            android:id="@+id/btn_frag3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#FFB100"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/kakaootfregular"
            android:text="지도"/>
    </LinearLayout>

</LinearLayout>


